{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["components/**/*", "stories/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "lib": ["es2015", "DOM"],
    "types": ["svelte"],
    "outDir": "public",
    "declaration": false,
    "paths": {
      "@src": ["./src/"],
      "@interfaces": ["./src/interfaces.ts"]
    }
  }
}
